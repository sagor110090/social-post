# Webhook Monitoring & Observability Configuration

# Enable/disable monitoring system
WEBHOOK_MONITORING_ENABLED=true

# Logging Configuration
WEBHOOK_STRUCTURED_LOGGING=true
WEBHOOK_CORRELATION_IDS=true
WEBHOOK_PERFORMANCE_LOGGING=true
WEBHOOK_CONTEXT_ENRICHMENT=true

# Log Levels and Retention
WEBHOOK_EVENTS_LOG_LEVEL=info
WEBHOOK_PROCESSING_LOG_LEVEL=info
WEBHOOK_SECURITY_LOG_LEVEL=warning
WEBHOOK_PERFORMANCE_LOG_LEVEL=info
WEBHOOK_ERRORS_LOG_LEVEL=error
WEBHOOK_METRICS_LOG_LEVEL=info

WEBHOOK_EVENTS_LOG_DAYS=30
WEBHOOK_PROCESSING_LOG_DAYS=30
WEBHOOK_SECURITY_LOG_DAYS=90
WEBHOOK_PERFORMANCE_LOG_DAYS=14
WEBHOOK_ERRORS_LOG_DAYS=60
WEBHOOK_METRICS_LOG_DAYS=7

# Metrics Configuration
WEBHOOK_METRICS_ENABLED=true
WEBHOOK_REAL_TIME_METRICS=true
WEBHOOK_METRICS_AGGREGATION=true
WEBHOOK_METRICS_RETENTION_DAYS=30
WEBHOOK_METRICS_DRIVER=redis
WEBHOOK_METRICS_TTL=2592000
WEBHOOK_METRICS_INTERVAL=30

# Distributed Tracing
WEBHOOK_TRACING_ENABLED=true
WEBHOOK_TRACING_SAMPLE_RATE=1.0
WEBHOOK_MAX_SPANS=100

# Alerting Configuration
WEBHOOK_ALERTING_ENABLED=true
WEBHOOK_REAL_TIME_ALERTS=true
WEBHOOK_ALERT_CHANNELS=email,slack
WEBHOOK_ALERT_EVALUATION_INTERVAL=60

# Email Alerts
WEBHOOK_ALERT_EMAIL_ENABLED=true
WEBHOOK_ALERT_EMAIL_TO=admin@example.com,ops@example.com
WEBHOOK_ALERT_EMAIL_FROM=alerts@example.com

# Slack Alerts
WEBHOOK_ALERT_SLACK_ENABLED=false
WEBHOOK_ALERT_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
WEBHOOK_ALERT_SLACK_CHANNEL=#alerts
WEBHOOK_ALERT_SLACK_USERNAME=Webhook Monitor

# Webhook Alerts
WEBHOOK_ALERT_WEBHOOK_ENABLED=false
WEBHOOK_ALERT_WEBHOOK_URL=https://your-webhook-endpoint.com/alerts

# Health Checks
WEBHOOK_HEALTH_CHECKS_ENABLED=true
WEBHOOK_HEALTH_CHECK_INTERVAL=60
WEBHOOK_HEALTH_CHECK_TIMEOUT=10
WEBHOOK_HEALTH_FAILURE_THRESHOLD=3

# Performance Monitoring
WEBHOOK_PERFORMANCE_MONITORING=true
WEBHOOK_PROFILING=false
WEBHOOK_PROFILING_SAMPLE_RATE=0.1
WEBHOOK_SLOW_QUERY_THRESHOLD=1000

# Memory and CPU Thresholds
WEBHOOK_MEMORY_WARNING_THRESHOLD=512
WEBHOOK_MEMORY_CRITICAL_THRESHOLD=1024
WEBHOOK_CPU_WARNING_THRESHOLD=80
WEBHOOK_CPU_CRITICAL_THRESHOLD=95

# Log Management
WEBHOOK_LOG_ARCHIVAL_ENABLED=false
WEBHOOK_LOG_ARCHIVAL_STORAGE=s3

# External Integrations
# Datadog
DATADOG_ENABLED=false
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key
DATADOG_HOST=api.datadoghq.com
DATADOG_TAGS=service:webhooks,env:production

# New Relic
NEWRELIC_ENABLED=false
NEWRELIC_APP_NAME=Webhook Service
NEWRELIC_LICENSE_KEY=your-newrelic-license-key

# Prometheus
PROMETHEUS_ENABLED=false
PROMETHEUS_PUSH_GATEWAY=http://pushgateway:9091

# Sentry
SENTRY_ENABLED=false
SENTRY_LARAVEL_DSN=https://your-sentry-dsn
SENTRY_ENVIRONMENT=production
SENTRY_SAMPLE_RATE=1.0